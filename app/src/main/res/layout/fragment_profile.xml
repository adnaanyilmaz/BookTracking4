<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="MissingClass">

    <!-- Book Cover Image with CardView -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBookCover"
        android:layout_width="150dp"
        android:layout_height="220dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBookCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Book Cover"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_book_cover" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Book Title with larger text and margin -->
    <TextView
        android:id="@+id/tvBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="Book Title"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardBookCover" />

    <!-- Author Name -->
    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="Author Name"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBookTitle" />

    <!-- Publisher with Icon -->
    <LinearLayout
        android:id="@+id/llPublisher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAuthor">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/tvPublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="Publisher"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Publication Date & ISBN as Chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llPublisher">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPublicationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publication Date"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/iconColor" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISBN"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/iconColor" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Rating (Optional) with Star Icons -->
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:paddingTop="12dp"
        android:rating="4"
        android:stepSize="0.5"
        android:theme="@style/RatingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipGroupInfo" />

    <!-- Description with scrollable container -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book description goes here. This will be scrollable if the text is too long."
            android:textColor="@color/black"
            android:textSize="16sp" />
    </ScrollView>

    <!-- Add to List Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddToList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonColor"
        android:paddingTop="16dp"
        android:text="Add to List"
        android:textColor="@color/white"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        tools:ignore="NotSibling" />

    <!-- Spinner for List Options -->
    <Spinner
        android:id="@+id/spinnerOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:entries="@array/book_list_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddToList" />
</androidx.constraintlayout.widget.ConstraintLayout>
